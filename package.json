{
  "name": "telegram-bot-cron-railway",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/worker.ts",
    "dev:ngrok": "ngrok http 3000",
    "dev:all": "concurrently \"bun run --watch src/worker.ts\" \"ngrok http 3000\"",
    "start": "bun run src/worker.ts",
    "bot:commands": "bun run scripts/setupBotCommands.ts",
    "bot:clear": "bun run scripts/setupBotCommands.ts --clear",
    "bot:commands:list": "bun run scripts/setupBotCommands.ts --list"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/node": "^22.19.9",
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "grammy": "^1.39.3",
    "hono": "^4.11.8"
  },
  "packageManager": "bun@1.1.26"
}